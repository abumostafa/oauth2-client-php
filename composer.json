{
    "name": "easybiblabs/oauth2-client-php",
    "description": "OAuth2 client for PHP",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Yitzchak Schaffer",
            "email": "yitzchak@imagineeasy.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "guzzle/guzzle": "3.8.*",
        "symfony/http-foundation": "2.*",
        "firebase/php-jwt": "^3.0.0"
    },
    "require-dev": {
      "phpunit/phpunit": "4.8.*",
      "phpmd/phpmd": "^2.2.3",
      "squizlabs/php_codesniffer": "^2.3.3"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-0": {
            "EasyBib\\Guzzle\\": "src/",
            "EasyBib\\OAuth2\\Client\\": "src/",
            "EasyBib\\Tests\\OAuth2\\Client\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    }
}
